%h1.text-center Users
%table.table
  %thead
    %tr
      %th Username
      %th Email
      %th Phone
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.phone
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
.text-center
  = will_paginate @users
%br/
= link_to 'New User', new_user_path
